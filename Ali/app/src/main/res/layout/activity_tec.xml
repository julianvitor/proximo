<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Àrea tecnica"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_horizontal" />

        <!--botão de log -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonGenerateLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gerar Log"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_submit"
            android:layout_marginTop="20dp"
            app:backgroundTint="@color/button_background_color"
            android:textSize="20sp" />

        <!--botão abrir travas -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonOpenLock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abrir todas as traVAS"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_submit"
            android:layout_marginTop="20dp"
            app:backgroundTint="#FF3B30"
            android:textSize="20sp" />

        <!--log RecyclerView-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/log_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp" />

        <!--botão apagar log-->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDeleteLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apagar Log"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_submit"
            android:layout_marginTop="20dp"
            app:backgroundTint="@color/button_background_color"
            android:textSize="20sp" />

        <!--botão voltar -->
        <com.google.android.material.button.MaterialButton
            android:text="Voltar"
            android:id="@+id/buttonBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/button_back"
            app:backgroundTint="@color/button_back_background_color"
            android:textSize="20sp"
            />

    </LinearLayout>
</ScrollView>
